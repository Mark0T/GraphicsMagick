extends layout

block content
  h1 Welcome to #{title}
  form(action='/' method='post' enctype='multipart/form-data')
    input(type='file' name='image')
    p
    | Resolution:#{' '}
    input(type='number' name='resX' id='resX' min='1' max='4096')
    | #{' '}x#{' '}
    input(type='number' name='resY' id='resY' min='1' max='2160')
    p
    button(type='submit') Upload
